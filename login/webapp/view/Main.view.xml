<mvc:View controllerName="login.controller.Main"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">
    <Page id="page" title="로그인">
        <content>
            <VBox
                justifyContent="Center"
                alignItems="Center"
                height="100%"
                >
                
                <!-- 로고 -->
                <Image src="C:/Users/soldesk/Desktop/sapssarum/login/login/그림1.png" width="200px" height="auto" class="sapUiMediumMarginBottom"/>

                <!-- 제목 -->
                <Title text="명당에 점 º 찍다" level="H1" class="sapUiLargeMarginTop sapUiLargeMarginBottom"/>

                <!-- 로그인 폼 -->
                <VBox width="80%" alignItems="Center" justifyContent="Center" class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                    <Input id="id" placeholder="아이디 입력" width="100%" maxLength="15" class="sapUiTinyMarginBottom"/>
                    <Input id="password" type="Password" placeholder="비밀번호 입력" width="100%" maxLength="20" class="sapUiTinyMarginBottom"/>
                    <Button text="로그인" press="onLoginPress" type="Emphasized" width="100%" class="sapUiTinyMarginBottom"/>
                    <Link text="쌉싸름 회원가입 하러가기" press="onSignUpPress" class="sapUiTinyMarginTop"/>
                </VBox>

                <!-- 비밀번호 표시 토글 -->
                <HBox justifyContent="SpaceBetween" width="80%" class="sapUiTinyMarginTop">
                    <!-- Add content here if needed -->
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>

<mvc:View controllerName="cart.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout">
    <Page id="page">
        <ScrollContainer vertical="true" height="100%">
		<tnt:ToolHeader id="shellLikeToolHeader" class="sapUiTinyMargin">
			<Button icon="sap-icon://menu2" type="Transparent" tooltip="Menu" press=".onCollapseExpandPress">
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow"/>
				</layoutData>
			</Button>

			<Title text="{userData>/userId} 님" wrapping="false" id="productName">
				<layoutData>
					<OverflowToolbarLayoutData priority="Disappear"/>
				</layoutData>
			</Title>
			<Text text="의 장바구니" wrapping="false" id="secondTitle">
				<layoutData>
					<OverflowToolbarLayoutData priority="Disappear"/>
				</layoutData>
			</Text>
			<ToolbarSpacer />
			<ToolbarSpacer id="spacer">
				<layoutData>
					<OverflowToolbarLayoutData priority="Low" group="1"/>
				</layoutData>
			</ToolbarSpacer>
	
			<ToolbarSeparator>
				<layoutData>
					<OverflowToolbarLayoutData group="2"/>
				</layoutData>
			</ToolbarSeparator>
			<MenuButton icon="sap-icon://action-settings" type="Transparent">
			<menu>
				<Menu>
					<MenuItem text="로그아웃" icon="sap-icon://log" press="onLoginPress">
						<customData>
							<core:CustomData
								key="target"
								value="p1" />
						</customData>
					</MenuItem>
					
				</Menu>
			</menu>
		</MenuButton>
			
		</tnt:ToolHeader>
        <tnt:SideNavigation id="sideNavigation" selectedKey="walked" expanded="false" >
			<tnt:NavigationList>
				<tnt:NavigationListItem text="홈페이지" icon="sap-icon://home" />
				<tnt:NavigationListItem text="마이 페이지" icon="sap-icon://address-book" />
                <tnt:NavigationListItem text="장바구니" icon="sap-icon://cart" select="onCartPress" />
			</tnt:NavigationList>
			<tnt:fixedItem>
				<tnt:NavigationList>
					<tnt:NavigationListItem text="설문조사 하러가기" icon="sap-icon://bar-chart" />
                    <tnt:NavigationListItem text="챗봇" icon="sap-icon://comment" />
					<tnt:NavigationListItem selectable="false" href="https://sap.com" target="_blank" text="외부 링크(임시)" icon="sap-icon://attachment" />
					
				</tnt:NavigationList>
			</tnt:fixedItem>
		</tnt:SideNavigation>
    </ScrollContainer> 

    </Page>
			
</mvc:View>

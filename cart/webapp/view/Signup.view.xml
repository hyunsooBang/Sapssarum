<mvc:View controllerName="cart.controller.Signup"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <html:head>
        <html:link rel="stylesheet" href="css/style.css"/>
    </html:head>
    <Page id="page" title="회원가입" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <!-- 배경 이미지 -->
            <VBox class="fullscreen-bg2"></VBox>
            <VBox class="fullscreen-content2"  alignItems="Center" height="100%">
                <FlexBox height="170px"></FlexBox>
                <List class="transparent-list" backgroundDesign="Transparent">
                    <InputListItem label="아이디">
                        <HBox>
                            <Input id='username'/>
                            <FlexBox width="10px"/>
                            <Button text='중복체크' press="onCheckDuplicatePress" type="Transparent"/>
                        </HBox>
                    </InputListItem>
                    <InputListItem label="비밀번호">
                        <Input id='password'/>
                    </InputListItem>
                    <InputListItem label="이름">
                        <HBox>
                            <FlexBox width="27px"/>
                            <Input id='name'/>
                        </HBox>
                    </InputListItem>
                    <InputListItem label="남성">
                        <RadioButton id="genderMale" groupName="GroupInputListItem" selected="true"/>
                    </InputListItem>
                    <InputListItem label="여성">
                        <RadioButton id="genderFemale" groupName="GroupInputListItem"/>
                    </InputListItem>
                    <InputListItem label="전화번호">
                        <Input id="phone" type="Tel"/>
                    </InputListItem>
                    <InputListItem label="주소">
                        <HBox>
                            <FlexBox width="27px"/>
                            <Input id="address"/>
                        </HBox>
                    </InputListItem>
                    <InputListItem label="생일">
                        <HBox>
                            <FlexBox width="20px"/>
                            <DatePicker id='bday' width="67%"/>
                            <FlexBox width="10px"/>
                            <Button text='연령대 계산' press=".setAge" type="Transparent"/>
                        </HBox>
                    </InputListItem>
                    <InputListItem label="연령대">
                        <Select id="ageSelect">
                            <core:Item key="1" text="10대"/>
                            <core:Item key="2" text="20대"/>
                            <core:Item key="3" text="30대"/>
                            <core:Item key="4" text="40대"/>
                            <core:Item key="5" text="50대"/>
                            <core:Item key="6" text="60대"/>
                            <core:Item key="7" text="70대 이상"/>
                        </Select>
                    </InputListItem>
                </List>
                <FlexBox height="20px"/>
                <Button text='회원가입' press="onSignupPress"/>
            </VBox>
        </content>
    </Page>
</mvc:View>
